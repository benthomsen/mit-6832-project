<?xml version="1.0"?>

<robot name="Ben UAV">

  <link name="base_link">
    <inertial>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1"  ixy="0"  ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
	  <origin xyz="0 0 -10" rpy="0 0 0"/>
      <geometry>
 	    <box size="1000 1 20"/>
      </geometry>
      <material>
        <color rgba="0.75 1 0.75 1" />
      </material>
    </visual>
    <visual>
	  <origin xyz="0 0 12" rpy="0 0 0"/>
      <geometry>
 	    <box size="1000 1 20"/>
      </geometry>
      <material>
        <color rgba="0.75 0.75 1 0.5" />
      </material>
    </visual>
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0" />
      <geometry>
         <box size="0.5 0.5 2" />
      </geometry>
      <material>
        <color rgba="0 1 0 0.5" />
      </material>
    </visual>
    <visual>
      <origin xyz="14 0 1" rpy="0 0 0" />
      <geometry>
         <box size="0.5 0.5 2" />
      </geometry>
      <material>
        <color rgba="1 0 0 0.5" />
      </material>
    </visual>
  </link>

  <link name="fuselage">
    <inertial>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1"  ixy="0"  ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
      <geometry>
 	    <cylinder length="0.8" radius="0.03"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="0 0 0.4" rpy="0 0 0" />
      <geometry>
         <sphere radius=".06" />
      </geometry>
      <material>
        <color rgba="0 0 1 1" />
      </material>
    </visual>
    
    <visual>
      <origin xyz="0 0 0.4" rpy="0 1.57 0" />
      <geometry>
 	    <cylinder length="0.3" radius="0.02"/>
      </geometry>
    </visual>
  </link>
  
  <link name="tail">
    <inertial>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.1"  ixy="0"  ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -.1" rpy="0 0 0" />
      <geometry>
 	    <cylinder length="0.2" radius="0.03"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
         <sphere radius=".06" />
      </geometry>
      <material>
        <color rgba="0 0 1 1" />
      </material>
    </visual>
<!-- 
    <visual>
      <origin xyz="0 0 -0.2" rpy="0 0 0" />
      <geometry>
         <sphere radius=".08" />
      </geometry>
      <material>
        <color rgba="1 0 0 1" />
      </material>
    </visual>
 -->
  </link>
  
  <joint name="theta" type="continuous">
    <parent link="fuselage" />
    <child link="tail" />
    <origin xyz="0 0 -0.4" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>
</robot>